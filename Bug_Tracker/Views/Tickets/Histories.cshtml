@using Bug_Tracker.Models
@model IEnumerable<TicketHistory>

@{ 
    UserRoleHelper RoleHelper = new UserRoleHelper();
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark" style="font-weight: bold; font-size: 300%">Ticket Histories</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>



<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title" style="font-weight: bold">Ticket Histories</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <table id="ticketHistoriesTable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Ticket</th>
                            <th>Property</th>
                            <th>New Value</th>
                            <th>Old Value</th>
                            <th>User</th>
                            <th>Changed</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var history in Model)
                        {
                            <tr onclick="location.href = '@Url.Action("Details", "Tickets", new { id = history.TicketId })'" style="cursor: pointer">
                                <td>@history.Ticket.Title</td>
                                <td>@history.Property</td>
                                <td>@history.NewValue</td>
                                <td>@history.OldValue</td>
                                <td>@history.User.FullName</td>
                                <td>@history.Changed</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Ticket</th>
                            <th>Property</th>
                            <th>New Value</th>
                            <th>Old Value</th>
                            <th>User</th>
                            <th>Changed</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    <!-- The Modal -->

</section>

@section scripts {
    <script>
        $(document).ready(function () {
            $("#ticketHistoriesTable").DataTable({
                "order": [[2, "asc"]]
            });
        });
    </script>
}
