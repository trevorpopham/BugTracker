                                        <span class="info-box-icon bg-white elevation-1"><i class="fas fa-laptop" style="color: #208637"></i></span>
                                        <div class="info-box-content">
                                            <span class="info-box-text" style="font-size: large; font-weight: bold">Assigned Developer:</span>
                                            <span class="info-box-text">@Model.Ticket.AssignedToUser.FullName</span>
                                        </div>
                                        <i class="fas fa-plus-circle float-right"></i>
                                        <!-- /.info-box-content -->
                                    </div>
                                </a>
                            }
                            else
                            {
                                <a style="color: black" href="#" data-toggle="modal" data-target="#assignDeveloperModal">
